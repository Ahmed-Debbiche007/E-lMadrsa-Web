{% extends 'front_office/blogbase.html.twig' %}

{% block title %}
  CATEGORY LIST
{% endblock %}
{% block pageHeading %}
  <h1>Liste des categories :</h1>

{% endblock %}

{% block body %}
  {% for message in app.flashes('info') %}
    <div class="alert alert succ">{{ message }}</div>
  {% endfor %}
  <div class="row">
    {% for category in categories %}
      <div class="col-6 col-lg-3 col-md-6">
		<div class="card">
			<div class="card-body px-4 py-4-5">
				<div class="row">
					<div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-start ">
						<div class="stats-icon purple mb-2">
							<img src="{{ asset('uploads/images/' ~ category.getCategoryimage()) }}" alt="taswira" height="50" />
						</div>
					</div>
					<div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
						<h6 class="font-bold">{{ category.categoryname }}</h6>
					</div>
                    <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
						<a href="{{ path('app_category_showfront', { categoryid: category.categoryid }) }}"><span class="badge bg-primary">show</span></a>




					</div>
				</div>
                
			</div>
            
		</div>
	</div>
    {% else %}
      <h1>No Categories</h1>
    {% endfor %}
  </div>
{% endblock %}
