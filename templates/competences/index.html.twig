{% extends 'back_office/backbase.html.twig' %}

{% block title %}Gestion Competences{% endblock %}

{% block body %}
    <h1>Gestion Competences</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idcompetence</th>
                <th>Nomcompetence</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td>{{ competence.idcompetence }}</td>
                <td>{{ competence.nomcompetence }}</td>
                <td>


                    <form id="my_form" method="post" action="{{ path('app_competences_show', {'idcompetence': competence.idcompetence}) }}" >
                        <a href="{{ path('app_competences_show', {'idcompetence': competence.idcompetence}) }}">
                            <span class="badge bg-primary">show</span>
                        </a>
                        <a href="{{ path('app_competences_edit', {'idcompetence': competence.idcompetence}) }}">
                            <span class="badge bg-success">edit</span>
                        </a>


                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~competence.idcompetence) }}">

                        <a href="#" class="badge bg-danger" onclick="document.getElementById('my_form').submit();">Delete</a>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_competences_new') }}">Create new Competence </a>
{% endblock %}
