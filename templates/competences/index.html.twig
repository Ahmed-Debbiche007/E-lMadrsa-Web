{% extends 'base.html.twig' %}

{% block title %}Competences index{% endblock %}

{% block body %}
    <h1>Competences index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idcompetence</th>
                <th>Nomcompetence</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td>{{ competence.idcompetence }}</td>
                <td>{{ competence.nomcompetence }}</td>
                <td>
                    <a href="{{ path('app_competences_show', {'idcompetence': competence.idcompetence}) }}">show</a>
                    <a href="{{ path('app_competences_edit', {'idcompetence': competence.idcompetence}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_competences_new') }}">Create new</a>
{% endblock %}
