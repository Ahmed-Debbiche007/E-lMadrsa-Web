{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <h1>Messages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idmessage</th>
                <td>{{ message.idmessage }}</td>
            </tr>
            <tr>
                <th>Idsession</th>
                <td>{{ message.idsession }}</td>
            </tr>
            <tr>
                <th>Idsender</th>
                <td>{{ message.idsender }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ message.body }}</td>
            </tr>
            <tr>
                <th>Statusdate</th>
                <td>{{ message.statusdate ? message.statusdate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_messages_index') }}">back to list</a>

    <a href="{{ path('app_messages_edit', {'idmessage': message.idmessage}) }}">edit</a>

    {{ include('back_office/messages/_delete_form.html.twig') }}
{% endblock %}
