{% extends 'back_office/backbase.html.twig' %}

{% block title %}New Requests
{% endblock %}

{% block body %}
    <h1>Edit Tutorshipsessions</h1>

    {{ form_start(form) }}


<div class="form-group position-relative has-icon-left mb-4">{{ form_widget(form.type, { attr: { class: 'form-control form-control-xl', placeholder: 'Type' } }) }}</div>
<div class="form-group position-relative has-icon-left mb-4">{{ form_widget(form.date, { attr: { class: 'form-control form-control-xl' } }) }}</div>
<div class="form-group position-relative has-icon-left mb-4">{{ form_widget(form.body, { attr: { class: 'form-control form-control-xl', placeholder: "What's on your mind, baby boy?", required: false, hidden: "hidden" } }) }}</div>
<div class="form-group position-relative has-icon-left mb-4"><p class="text-bold">{{form.vars.value.body}}</p></div>
<button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}

{% endblock %}
