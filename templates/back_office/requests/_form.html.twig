{{ form_start(form) }}

<div class="form-group position-relative has-icon-left mb-4">
  {% if form_errors(form.idTutor) %}
    <div class="alert alert-danger">{{ form_errors(form.idTutor) }}</div>
  {% endif %}
  {{ form_widget(form.idTutor, { attr: { class: 'form-control form-control-xl', placeholder: 'Tutor' } }) }}
</div>

<div class="form-group position-relative has-icon-left mb-4">
  {% if form_errors(form.type) %}
    <div class="alert alert-danger">{{ form_errors(form.type) }}</div>
  {% endif %}
  {{ form_widget(form.type, { attr: { class: 'form-control form-control-xl', placeholder: 'Type' } }) }}
</div>

<div class="form-group position-relative has-icon-left mb-4">
  {% if form_errors(form.date) %}
    <div class="alert alert-danger">{{ form_errors(form.date) }}</div>
  {% endif %}
  {{ form_widget(form.date, { attr: { class: 'form-control form-control-xl' } }) }}
</div>
<div class="form-group position-relative has-icon-left mb-4">
  {% if form_errors(form.body) %}
    <div class="alert alert-danger">{{ form_errors(form.body) }}</div>
  {% endif %}
  {{ form_widget(form.body, { attr: { class: 'form-control form-control-xl', placeholder: "What's on your mind, baby boy?", required: false } }) }}
</div>
<button class="btn btn-primary btn-block btn-lg shadow-lg mt-5">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
