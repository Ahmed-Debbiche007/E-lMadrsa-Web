{{ form_start(form) }}
<div class="form-group position-relative has-icon-left mb-4">
  {% if form_errors(form.IdCate) %}
    <div class="alert alert-danger">
        {{ form_errors(form.IdCate) }}
    </div>
  {% endif %}
  {{ form_widget(form.IdCate, { attr: { class: 'form-control form-control-xl', placeholder: 'Event Categoty' }}) }}
</div>

              <!-- General Form Elements -->
              <form>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Type evenement</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.IdCate,{'attr':{'class':'form-controle'}})}}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Nom Evenement</label>
                  <div class="col-sm-10">
                    
                    {{ form_widget(form.nomEvenement,{'attr':{'class':'form-controle'}})}}
                    {{ form_errors(form.nomEvenement) }}
                    
                </div>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Description</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.description,{'attr':{'class':'form-controle'}})}}
                    {{ form_errors(form.description) }}
                </div>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Image</label>
                  <div class="col-sm-10">
                   {{ form_widget(form.image,{'attr':{'class':'form-controle'}})}}
                  
                </div>
                <div class="row mb-3">
                  <label for="inputDate" class="col-sm-2 col-form-label">Date</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.date,{'attr':{'class':'form-controle'}})}}
                    {{ form_errors(form.date) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">User</label>
                  <div class="col-sm-10">
                     {{ form_widget(form.IdUser,{'attr':{'class':'form-controle'}})}}
                  </div>
                </div>

<div class="form-group position-relative has-icon-left mb-4">
  {% if form_errors(form.description) %}
    <div class="alert alert-danger">
        {{ form_errors(form.description) }}
    </div>
  {% endif %}
  {{ form_widget(form.description, { attr: { class: 'form-control form-control-xl', placeholder: 'Event Description' }}) }}
</div>

<div class="form-group position-relative has-icon-left mb-4">
  {% if form_errors(form.image) %}
    <div class="alert alert-danger">
        {{ form_errors(form.image) }}
    </div>
  {% endif %}
  {{ form_widget(form.image, { attr: { class: 'form-control ' } }) }}
</div>

<div class="form-group position-relative has-icon-left mb-4">
  {% if form_errors(form.date) %}
    <div class="alert alert-danger">
        {{ form_errors(form.date) }}
    </div>
  {% endif %}
  {{ form_widget(form.date, { attr: { class: 'form-control form-control-xl', placeholder: 'Event Date' }}) }}
</div>

<button class="btn btn-primary shadow-lg mt-5">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
